{
  "name": "@sonder/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "sonder": "./src/index.tsx"
  },
  "exports": {
    ".": {
      "bun": "./src/index.tsx",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun",
    "build:release": "bun run scripts/build-release.ts",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit -p ."
  },
  "engines": {
    "bun": "^1.3.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/openai": "^2.0.77",
    "@opentui/core": "0.1.46",
    "@opentui/react": "0.1.46",
    "ai": "^5.0.106",
    "commander": "^14.0.1",
    "immer": "^10.1.3",
    "react": "^19.0.0",
    "react-reconciler": "^0.32.0",
    "string-width": "^7.2.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "22",
    "@types/react": "^18.3.12",
    "@types/react-reconciler": "^0.32.0",
    "typescript": "^5.7.0"
  }
}
